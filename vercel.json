{
  "version": 2,
  "outputDirectory": "web",
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/chat",
      "destination": "/api/chat"
    },
    {
      "source": "/api/dashboard",
      "destination": "/api/dashboard"
    },
    {
      "source": "/",
      "destination": "/web/landing.html"
    },
    {
      "source": "/executive",
      "destination": "/web/executive-dashboard.html"
    },
    {
      "source": "/diversification",
      "destination": "/web/index.html"
    },
    {
      "source": "/turnaround",
      "destination": "/web/turnaround.html"
    },
    {
      "source": "/wellness",
      "destination": "/web/wellness.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}