{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "outputDirectory": "web",
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/chat",
      "destination": "/api/chat"
    },
    {
      "source": "/api/dashboard",
      "destination": "/api/dashboard"
    },
    {
      "source": "/",
      "destination": "/landing.html"
    },
    {
      "source": "/executive",
      "destination": "/executive-dashboard.html"
    },
    {
      "source": "/diversification",
      "destination": "/index.html"
    },
    {
      "source": "/turnaround",
      "destination": "/turnaround.html"
    },
    {
      "source": "/wellness",
      "destination": "/wellness.html"
    }
  ],
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}