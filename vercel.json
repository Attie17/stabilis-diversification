{
  "version": 2,
  "buildCommand": "echo 'No build needed'",
  "headers": [
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/web/js/(.*).js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/web/css/(.*).css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/web/manifest.json",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/web/service-worker.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache"
        },
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        }
      ]
    },
    {
      "source": "/web/icons/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/ai/alerts/:id/acknowledge",
      "destination": "/api/ai/acknowledge?id=:id"
    },
    {
      "source": "/api/ai/alerts",
      "destination": "/api/ai/alerts"
    },
    {
      "source": "/api/chat",
      "destination": "/api/chat"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/milestones",
      "destination": "/api/milestones/index"
    },
    {
      "source": "/api/milestones/update",
      "destination": "/api/milestones/update"
    },
    {
      "source": "/api/milestones/sync",
      "destination": "/api/milestones/sync"
    },
    {
      "source": "/",
      "destination": "/web/landing.html"
    },
    {
      "source": "/executive",
      "destination": "/web/executive-dashboard.html"
    },
    {
      "source": "/diversification",
      "destination": "/web/index.html"
    },
    {
      "source": "/turnaround",
      "destination": "/web/turnaround.html"
    },
    {
      "source": "/wellness",
      "destination": "/web/wellness.html"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  }
}